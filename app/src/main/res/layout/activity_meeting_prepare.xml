<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">


    <!-- 设备信息区域（客户端列表上方） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/device_info_background"
        android:layout_marginBottom="4dp"
        android:elevation="4dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备信息"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="5dp"
            android:gravity="center_vertical" />
        
        <!-- 使用LinearLayout实现2列网格布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- 第一行：设备ID | 医院 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                
                <!-- 设备ID -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingEnd="8dp">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_device"
                        android:contentDescription="设备ID"
                        android:layout_marginEnd="8dp"
                        android:tint="@color/purple_500" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会议号"
                        android:textSize="12sp"
                        android:textColor="@color/offline_gray" />
                        
                        <TextView
                            android:id="@+id/tv_device_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未设置"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>
                
                <!-- 医院 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_hospital"
                        android:contentDescription="医院"
                        android:layout_marginEnd="8dp"
                        android:tint="@color/purple_500" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="医院"
                            android:textSize="12sp"
                            android:textColor="@color/offline_gray" />
                        
                        <TextView
                            android:id="@+id/tv_hospital_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未设置"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <!-- 第二行：科室 | 设备 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                
                <!-- 科室 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingEnd="8dp">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_department"
                        android:contentDescription="科室"
                        android:layout_marginEnd="8dp"
                        android:tint="@color/purple_500" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="科室"
                            android:textSize="12sp"
                            android:textColor="@color/offline_gray" />
                        
                        <TextView
                            android:id="@+id/tv_department_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未设置"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>
                
                <!-- 设备 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_equipment"
                        android:contentDescription="设备"
                        android:layout_marginEnd="8dp"
                        android:tint="@color/purple_500" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设备"
                            android:textSize="12sp"
                            android:textColor="@color/offline_gray" />
                        
                        <TextView
                            android:id="@+id/tv_equipment_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未设置"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 中部：客户端列表 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户端列表"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_clients"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- 下部：会议设备状态 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@drawable/device_info_background">

        <!-- 左侧按钮组 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <!-- USB 摄像头状态 -->
            <ImageView
                android:id="@+id/iv_usb_camera"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_camera_off"
                android:contentDescription="USB摄像头"
                android:layout_marginEnd="16dp" />

            <!-- 麦克风 -->
            <ImageView
                android:id="@+id/iv_microphone"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_mic_off"
                android:contentDescription="麦克风" />
        </LinearLayout>

        <!-- 中间通话按钮 -->
        <ImageView
            android:id="@+id/btn_call"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_btn_call"
            android:contentDescription="通话" />

        <!-- 右侧按钮组 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <!-- 远程控制 -->
            <ImageView
                android:id="@+id/iv_remote_control"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_remote_control_off"
                android:contentDescription="远程控制"
                android:layout_marginEnd="16dp" />

            <!-- 退出程序 -->
            <ImageButton
                android:id="@+id/btn_exit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_exit"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="退出程序"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:adjustViewBounds="true" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

