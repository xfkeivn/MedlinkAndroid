<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- 顶部工具栏：退出按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginBottom="16dp">
        
        <Button
            android:id="@+id/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出程序"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <!-- 设备信息区域（客户端列表上方） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/device_info_background"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备信息"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />
        
        <!-- 使用LinearLayout实现2列网格布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- 第一行：设备ID | 医院 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                
                <!-- 设备ID -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingEnd="8dp">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_device"
                        android:contentDescription="设备ID"
                        android:layout_marginEnd="8dp"
                        android:tint="@color/purple_500" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会议号"
                        android:textSize="12sp"
                        android:textColor="@color/offline_gray" />
                        
                        <TextView
                            android:id="@+id/tv_device_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未设置"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>
                
                <!-- 医院 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_hospital"
                        android:contentDescription="医院"
                        android:layout_marginEnd="8dp"
                        android:tint="@color/purple_500" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="医院"
                            android:textSize="12sp"
                            android:textColor="@color/offline_gray" />
                        
                        <TextView
                            android:id="@+id/tv_hospital_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未设置"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <!-- 第二行：科室 | 设备 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                
                <!-- 科室 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingEnd="8dp">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_department"
                        android:contentDescription="科室"
                        android:layout_marginEnd="8dp"
                        android:tint="@color/purple_500" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="科室"
                            android:textSize="12sp"
                            android:textColor="@color/offline_gray" />
                        
                        <TextView
                            android:id="@+id/tv_department_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未设置"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>
                
                <!-- 设备 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_equipment"
                        android:contentDescription="设备"
                        android:layout_marginEnd="8dp"
                        android:tint="@color/purple_500" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设备"
                            android:textSize="12sp"
                            android:textColor="@color/offline_gray" />
                        
                        <TextView
                            android:id="@+id/tv_equipment_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未设置"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 中部：客户端列表 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户端列表"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_clients"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- 下部：会议设备状态 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@android:color/darker_gray">

        <!-- USB 摄像头状态 -->
        <ImageView
            android:id="@+id/iv_usb_camera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_camera_off"
            android:contentDescription="USB摄像头"
            android:layout_marginEnd="16dp" />

        <!-- 麦克风 -->
        <ImageView
            android:id="@+id/iv_microphone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_mic_off"
            android:contentDescription="麦克风"
            android:layout_marginEnd="16dp" />

        <!-- 通话按钮 -->
        <Button
            android:id="@+id/btn_call"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="通话"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:enabled="false"
            android:alpha="0.5" />

        <!-- 远程控制 -->
        <ImageView
            android:id="@+id/iv_remote_control"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_mouse_disabled"
            android:contentDescription="远程控制"
            android:layout_marginStart="16dp" />

    </LinearLayout>

</LinearLayout>

