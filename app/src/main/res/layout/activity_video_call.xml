<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/black">

    <!-- 左侧：视频显示区域 -->
    <FrameLayout
        android:id="@+id/video_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/black">

        <SurfaceView
            android:id="@+id/surface_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- 占位视图，实际应该显示采集的视频 -->
        <TextView
            android:id="@+id/placeholder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="等待 USB 摄像头连接..."
            android:textColor="@color/white"
            android:textSize="24sp" />

    </FrameLayout>

    <!-- 右侧：会议状态栏 -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/darker_gray"
        android:padding="16dp">

        <!-- 远程视频流显示窗口 -->
        <FrameLayout
            android:id="@+id/remote_video_container"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:background="@color/black">

            <SurfaceView
                android:id="@+id/remote_video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_remote_video_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="等待远程视频..."
                android:textColor="@color/white"
                android:textSize="12sp" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会议状态"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tv_call_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginBottom="32dp" />

        <ImageButton
            android:id="@+id/btn_microphone"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_mic_on"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="麦克风"
            android:layout_marginBottom="16dp" />

        <ImageButton
            android:id="@+id/btn_end_call"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_end_call"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="结束会议"
            android:layout_marginBottom="16dp" />

        <ImageButton
            android:id="@+id/btn_remote_control"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_remote_control_off"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="远程控制" />

    </LinearLayout>

</LinearLayout>

